var stripe = Stripe('pk_live_OMU0i329t4fm9FLaztfREuQ400HL7eVr35');

function alipay(amount) {
    showLoading();
    stripe.createSource({
        type: 'alipay',
        amount: parseInt(amount),
        currency: 'hkd', //cny,usd, eur,
        redirect: {
                  return_url:'https://cozzimarble.com/pay/result.html'
        },
    }).then(function (response) {
        hideLoading();
        if (response.error) {
            alert(response.error.message);
        }
        else {
            processStripeResponse(response.source);
        }
    });
}

function processStripeResponse(source) {
    window.location.href = source.redirect.url;
}

        

    
